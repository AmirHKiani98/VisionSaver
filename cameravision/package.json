{
  "name": "camarchive",
  "version": "1.0.1",
  "description": "CamArchive App",
  "main": "./out/main/index.js",
  "author": "amirhkiani98.github.io",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:tailwindcss": "npx tailwindcss -i ./src/renderer/src/assets/main.css -o ./src/renderer/src/assets/output.css --watch",
    "test": "jest",
    "build:mac:portable": "npm run build && electron-builder --mac --dir",
    "build:win:portable": "npm run build && electron-builder --win --dir"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/roboto": "^5.2.6",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@heroicons/react": "^2.2.0",
    "@material-tailwind/react": "^2.1.10",
    "@mui/icons-material": "^7.1.2",
    "@mui/joy": "^5.0.0-beta.52",
    "@mui/material": "^7.1.2",
    "@mui/x-date-pickers": "^8.6.0",
    "@tailwindcss/vite": "^4.1.11",
    "apache-arrow": "^21.0.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^17.0.0",
    "electron-updater": "^6.3.9",
    "nodejs-polars": "^0.21.1",
    "react-day-picker": "^9.7.0",
    "react-konva": "^19.0.7",
    "react-player": "^3.0.0",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@babel/runtime": "^7.27.6",
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.0",
    "csstype": "^3.1.3",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^3.4.17",
    "vite": "^6.2.6",
    "vite-plugin-node-polyfills": "^0.24.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "asar": false,
    "directories": {
      "output": "../dist/v${version}"
    },
    "extraResources": [
      {
        "from": "resources/backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules/**"
        ]
      },
      {
        "from": "resources/.hc_to_app_env",
        "to": ".hc_to_app_env"
      },
      {
        "from": "resources/backend/apps",
        "to": "backend/apps"
      },
      {
        "from": "resources/icon.ico",
        "to": "icon.ico"
      }
    ],
    "files": [
      "out/**",
      "main.js",
      "preload/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dir",
      "sign": false
    },
    "win": {
      "target": "portable",
      "icon": "resources/icon.png",
      "sign": false
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
